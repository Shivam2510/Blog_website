<%- include("partials/header"); -%>



<div class="container mt-5">
    <h1>All Blogs ðŸ˜‡</h1>

    <%  blogs.forEach(blog => { %>

    <div class="card mt-3 ">
    
        <div class="card-body">
        
          <h2 class="card-title"><%=blog.title%></h2>
          <p class="card-text"><%=blog.content.slice(0,99)%>...<a href="/blog/<%=blog._id%>">Read More</a></p>
          <a href="/blog/<%=blog._id%>" class="btn">Read More...</a>
          <a href="/delete/<%=blog._id%>" class="btn">Delete</a>
          <a href="/edit/<%=blog._id%>"  class="btn">Update</a>
          <span class="text-muted">published at<%=blog.postedAt%></span>
        </div>
      </div>
    
      <% }) %>
</div>








